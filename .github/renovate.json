{
  "extends": ["config:base", "group:allNonMajor"],
  "rebaseStalePrs": true,
  "schedule": ["on Monday every 9 weeks of the year starting on the 9th week"],
  "postUpdateOptions": ["npmDedupe"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@ckeditor/ckeditor"],
      "groupName": "ckeditor monorepo",
      "groupSlug": "ckeditor"
    }
  ]
}
