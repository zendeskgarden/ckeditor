{
  "name": "@zendeskgarden/ckeditor",
  "version": "0.2.1",
  "description": "Garden editor implementation for CKEditor5",
  "license": "Apache-2.0",
  "author": "Zendesk Garden <garden@zendesk.com>",
  "homepage": "https://garden.zendesk.com/",
  "repository": "https://github.com/zendeskgarden/ckeditor",
  "bugs": {
    "url": "https://github.com/zendeskgarden/ckeditor/issues"
  },
  "main": "dist/theme/theme.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "postcss src/theme --dir dist/theme",
    "build:storybook": "storybook build",
    "format": "prettier-package-json --write && npm run -- format:all --write",
    "format:all": "prettier --log-level warn '**/*.{js,mjs,ts,json,md}' '.storybook/**/*.{js,ts,json,md}' '!CHANGELOG.md' '!dist/**'",
    "postinstall": "husky",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint src/ .storybook/ --max-warnings 0",
    "lint:md": "markdownlint README.md src/**/*.md",
    "prepare": "npm run build",
    "start": "storybook dev -p 6006",
    "tag": "[ `git rev-parse --abbrev-ref HEAD` = 'main' ] && standard-version --no-verify",
    "test": "prettier-package-json --list-different && npm run -- format:all --check && npm run lint"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-react": "7.24.7",
    "@ckeditor/ckeditor5-basic-styles": "41.4.2",
    "@ckeditor/ckeditor5-block-quote": "41.4.2",
    "@ckeditor/ckeditor5-code-block": "41.4.2",
    "@ckeditor/ckeditor5-dev-utils": "39.9.1",
    "@ckeditor/ckeditor5-dev-webpack-plugin": "31.1.13",
    "@ckeditor/ckeditor5-editor-decoupled": "41.4.2",
    "@ckeditor/ckeditor5-essentials": "41.4.2",
    "@ckeditor/ckeditor5-heading": "41.4.2",
    "@ckeditor/ckeditor5-horizontal-line": "41.4.2",
    "@ckeditor/ckeditor5-indent": "41.4.2",
    "@ckeditor/ckeditor5-link": "41.4.2",
    "@ckeditor/ckeditor5-list": "41.4.2",
    "@ckeditor/ckeditor5-paragraph": "41.4.2",
    "@ckeditor/ckeditor5-react": "6.3.0",
    "@ckeditor/ckeditor5-theme-lark": "41.4.2",
    "@ckeditor/ckeditor5-widget": "41.4.2",
    "@storybook/addon-a11y": "8.2.9",
    "@storybook/addon-essentials": "8.2.9",
    "@storybook/addon-webpack5-compiler-babel": "3.0.3",
    "@storybook/manager-api": "8.2.9",
    "@storybook/react": "8.2.9",
    "@storybook/react-webpack5": "8.2.9",
    "@zendeskgarden/eslint-config": "43.0.0",
    "@zendeskgarden/react-theming": "9.1.1",
    "@zendeskgarden/scripts": "2.4.1",
    "@zendeskgarden/stylelint-config": "22.0.0",
    "@zendeskgarden/svg-icons": "7.2.0",
    "babel-loader": "9.1.3",
    "css-loader": "7.1.2",
    "envalid": "8.0.0",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.5",
    "markdownlint-cli": "0.41.0",
    "postcss": "8.4.44",
    "postcss-cli": "11.0.0",
    "postcss-inline-svg": "6.0.0",
    "postcss-loader": "8.1.1",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.3.3",
    "prettier-package-json": "2.8.0",
    "prop-types": "15.8.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-is": "18.3.1",
    "standard-version": "9.5.0",
    "storybook": "8.2.9",
    "styled-components": "6.1.13",
    "stylelint": "16.9.0",
    "stylelint-order": "6.0.4",
    "webpack": "5.94.0"
  },
  "keywords": [
    "ckeditor",
    "ckeditor5",
    "garden",
    "rte",
    "zendesk"
  ],
  "publishConfig": {
    "access": "public"
  }
}
